/* baseUI/navigation-bar/index.wxss */
.nav-bar {
	display: flex;
	text-align: center;
}
.left, .right {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 120rpx;
}

.left .left-arrow {
	display: none;
}

.left-slot:empty + .left-arrow {
	display: block;
}

.left .left-arrow .icon {
	width: 40rpx;
	display: block;
}

.center .center-title {
	display: none;
}

.center-slot:empty + .center-title {
	display: block;
}

/* flex 布局：占用剩下的宽带 */
.center {
	flex: 1; 
	display: flex;
	align-items: center;
	justify-content: center;
}

