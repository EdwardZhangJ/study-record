<!--components/song-list-item/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>
<view class="list-item">
	<view class="list-top">
		<image class="list-image" mode="widthFix" src="{{item.coverImgUrl}}"></image>
		<view class="play-counter">{{format.formatCount(item.playCount)}}</view>
	</view>
	<view class="list-bottom">{{item.name}}</view>
</view>
